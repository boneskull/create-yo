{
  "name": "create-yo",
  "version": "0.0.0-development",
  "description": "Use Yeoman generators via \"npm init\"",
  "main": "src/create-yo.js",
  "bin": {
    "create-yo": "src/create-yo.js"
  },
  "scripts": {
    "commit": "commit",
    "posttest": "eslint src test",
    "test": "mocha"
  },
  "keywords": [
    "yo",
    "yeoman",
    "npm",
    "init",
    "create",
    "scaffolding",
    "generator",
    "scaffold",
    "initialize",
    "npx"
  ],
  "author": "Christopher Hiller <boneskull@boneskull.com> (https://boneskull.com/)",
  "license": "Apache-2.0",
  "dependencies": {
    "ansi-bold": "^0.1.1",
    "global-dirs": "^1.0.0",
    "import-from": "^3.0.0",
    "log-symbols": "^3.0.0"
  },
  "engines": {
    "node": ">=8.0.0",
    "npm": ">=6.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@commitlint/prompt-cli": "^8.0.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-config-semistandard": "^13.0.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^2.4.0",
    "lint-staged": "^8.1.7",
    "mocha": "^6.1.4",
    "prettier": "^1.17.1",
    "rewiremock": "^3.13.7",
    "semantic-release": "^15.13.12",
    "sinon": "^7.3.2",
    "unexpected": "^11.6.0",
    "unexpected-sinon": "^10.11.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/boneskull/create-yo.git"
  },
  "files": [
    "src/create-yo.js"
  ],
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{yml,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "prettier": {
    "singleQuote": true,
    "bracketSpacing": false,
    "endOfLine": "auto"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
